{{> header}}
<main>
  <section id="product-container">
    <img src="/images/{{product.image}}" alt="${name}"/>
      <form method="POST" action="/api/cart?inventoryId={{product.id}}">
        <h2>{{product.name}}</h2>
        <p>{{product.description}}</p>
        <p>${{product.price}}</p>
        <label for="quantity-input">
          Quantity
          <input
            name="quantity"
            id="quantity-input"
            type="number"
            min="1"
            value="1"
            max="{{product.quantity}}" />
        </label>
        <button>Add to Cart</button>
      </form>
  </section>
  <a href="/" id="returnToStore">Return to Store Page</a>
</main>
{{> footer}}
